<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_employer_to_talk_type_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_press"
        android:orientation="horizontal"
        android:padding="@dimen/y10">

        <com.gjzg.custom.CImageView
            android:id="@+id/iv_item_employer_to_talk_type_1_worker_icon"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/person_face_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_employer_to_talk_type_1_worker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="王小二"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

                <ImageView
                    android:id="@+id/iv_item_employer_to_talk_type_1_worker_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/male" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_employer_to_talk_type_1_worker_skill_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水泥工"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_item_employer_to_talk_type_1_worker_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/worker_leisure" />

        </LinearLayout>

        <com.gjzg.custom.CImageView
            android:id="@+id/iv_item_employer_to_talk_type_1_worker_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/custom_service" />

    </LinearLayout>

    <View style="@style/v_split" />

</LinearLayout>