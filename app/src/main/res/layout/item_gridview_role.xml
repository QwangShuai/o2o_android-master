<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_gridview_role_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/sl_me_login"
            android:gravity="center"
            android:padding="@dimen/y5" />

        <ImageView
            android:id="@+id/iv_item_gridview_role_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_item_gridview_role_content"
            android:layout_alignTop="@+id/tv_item_gridview_role_content"
            android:src="@mipmap/close" />

    </RelativeLayout>

</LinearLayout>