<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:mContext=".activity.PublishJobActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_publish_job_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="发布工作" />

        <RelativeLayout
            android:id="@+id/rl_publish_job_add"
            style="@style/rl_return"
            android:layout_alignParentRight="true">

            <TextView
                style="@style/tv_top_title"
                android:layout_margin="@dimen/y5"
                android:text="增加工种"
                android:textSize="@dimen/x15" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/y5"
        android:background="@drawable/sl_ll_send_job"
        android:orientation="vertical"
        android:padding="@dimen/y5">

        <ListView
            android:id="@+id/lv_publish_job"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/rl_change_price_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_black_stroke_corner"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/y5"
                android:text="确认提交"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/x15" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
