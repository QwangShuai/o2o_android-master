<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:layout_marginTop="@dimen/y5"
        android:background="@drawable/sl_item_skills"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gjzg.custom.CImageView
                android:id="@+id/iv_item_person_img"
                android:layout_width="@dimen/y35"
                android:layout_height="@dimen/y35"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/x10"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/y6"
                android:layout_marginTop="@dimen/y6"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_mission_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray_a0a0a0"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_item_mission_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray_c4ced3"
                    android:textSize="@dimen/y9" />

                <TextView
                    android:id="@+id/tv_item_worker_mag_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/red_ff3e50"
                    android:textSize="@dimen/y9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y8"
                android:layout_marginRight="@dimen/y8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_item_mission_status"
                        android:layout_width="@dimen/y29"
                        android:layout_height="@dimen/y14"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv_item_mission_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/y12"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_mission_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/v_split" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y3"
            android:layout_marginTop="@dimen/y3">

            <LinearLayout
                android:id="@+id/ll_item_worker_mag_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/y11"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_item_worker_mag_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y5"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="取消发布"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

                <TextView
                    android:id="@+id/tv_item_worker_mag_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y5"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="修改"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_worker_mag_working"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/y11"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_item_worker_mag_quit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="我要辞职"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_worker_mag_talking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/y11"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_item_worker_mag_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="不接此单"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_worker_mag_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/y11"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_item_worker_mag_complain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="投诉雇主"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

                <TextView
                    android:id="@+id/tv_item_worker_mag_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y5"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="删除信息"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

                <TextView
                    android:id="@+id/tv_item_worker_mag_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y5"
                    android:background="@drawable/sl_me_login"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/y9"
                    android:paddingRight="@dimen/y9"
                    android:paddingTop="@dimen/y4"
                    android:text="追加评价"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y7" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>