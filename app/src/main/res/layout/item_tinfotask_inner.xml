<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_tinfotask_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_press"
        android:orientation="horizontal"
        android:padding="@dimen/y10">

        <com.gjzg.custom.CImageView
            android:id="@+id/iv_item_tinfotask_inner_icon"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/person_face_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_tinfotask_inner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

                <ImageView
                    android:id="@+id/iv_item_tinfotask_inner_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_tinfotask_inner_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_tinfotask_inner_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/y2"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/y8" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.gjzg.custom.CImageView
                android:id="@+id/iv_item_tinfotask_inner_mobile"
                android:layout_width="@dimen/y30"
                android:layout_height="@dimen/y30"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/phone_dail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_tinfotask_inner_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/blue_3dc4ff"
                android:paddingBottom="@dimen/y5"
                android:paddingLeft="@dimen/y10"
                android:paddingRight="@dimen/y10"
                android:paddingTop="@dimen/y5"
                android:text="评价"
                android:textColor="@color/white_ffffff"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>