<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/y10"
        android:background="@drawable/sp_pop_dialog"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pop_dialog_0_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/y10"
                android:gravity="center"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_pop_dialog_0_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sl_pop_dialog_l"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_pop_dialog_0_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blue_2681fc"
                    android:textSize="@dimen/y8" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pop_dialog_0_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sl_pop_dialog_r"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_pop_dialog_0_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blue_2681fc"
                    android:textSize="@dimen/y8" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>