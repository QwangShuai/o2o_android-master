<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_prove"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:mContext=".activity.PhoneProveActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_phone_prove_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="手机验证" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_phone_prove_pwd"
            style="@style/ll_pwd"
            android:layout_centerInParent="true">

            <RelativeLayout style="@style/rl_pwd">

                <TextView
                    android:id="@+id/tv_phone_prove_0"
                    style="@style/tv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <TextView
                    android:id="@+id/tv_phone_prove_1"
                    style="@style/tv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <TextView
                    android:id="@+id/tv_phone_prove_2"
                    style="@style/tv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <TextView
                    android:id="@+id/tv_phone_prove_3"
                    style="@style/tv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <TextView
                    android:id="@+id/tv_phone_prove_4"
                    style="@style/tv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <TextView
                    android:id="@+id/tv_phone_prove_5"
                    style="@style/tv_pwd" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_phone_prove_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="已给手机发出验证码"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_phone_prove_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_phone_prove_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_phone_prove_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y5"
            android:text="重新发送"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

    </RelativeLayout>

    <GridView
        android:id="@+id/gv_phone_prove"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="3" />

</LinearLayout>
