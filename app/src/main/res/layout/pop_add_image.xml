<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_detail_menu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pop_add_image_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/y5"
            android:paddingTop="@dimen/y5"
            android:text="拍照"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

        <View style="@style/v_split" />

        <TextView
            android:id="@+id/tv_pop_add_image_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/y5"
            android:paddingTop="@dimen/y5"
            android:text="图库"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

        <View style="@style/v_split" />

        <TextView
            android:id="@+id/tv_pop_add_image_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/y5"
            android:paddingTop="@dimen/y5"
            android:text="取消"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

    </LinearLayout>

</LinearLayout>