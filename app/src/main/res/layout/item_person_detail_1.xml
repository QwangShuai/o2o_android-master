<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:id="@+id/tv_item_person_detail_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y11" />

        <TextView
            android:id="@+id/tv_item_person_detail_1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y11" />

    </LinearLayout>

    <View style="@style/v_split" />

</LinearLayout>