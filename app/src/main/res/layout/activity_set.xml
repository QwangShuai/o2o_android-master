<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:mContext=".activity.SetActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_set_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="设置" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_set_cache_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:background="@drawable/sl_press"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/y5"
                    android:layout_weight="1"
                    android:text="清除缓存"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/y5"
                    android:src="@mipmap/arrow_r" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_set_cache_message_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:background="@drawable/sl_press"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/y5"
                    android:layout_weight="1"
                    android:text="消息提示"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/y5"
                    android:src="@mipmap/arrow_r" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_set_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:background="@drawable/sl_press"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/y5"
                    android:layout_weight="1"
                    android:text="关于我们"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/y5"
                    android:src="@mipmap/arrow_r" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_set_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/y5"
                android:background="@drawable/sp_login_get"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/y5"
                    android:text="退出登录"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y12" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
