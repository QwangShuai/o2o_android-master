<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y5">

            <TextView
                android:layout_width="@dimen/y42"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="标题"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_task_confirm_title_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y5">

            <TextView
                android:layout_width="@dimen/y42"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="描述"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_task_confirm_title_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y5">

            <TextView
                android:layout_width="@dimen/y42"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工程类型"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_task_confirm_title_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y5">

            <TextView
                android:layout_width="@dimen/y42"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="所在区域"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_task_confirm_title_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y5">

            <TextView
                android:layout_width="@dimen/y42"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="详细地址"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_task_confirm_title_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>