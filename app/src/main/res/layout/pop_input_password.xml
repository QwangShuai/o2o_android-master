<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pop_input_password_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/y5"
                android:text="×"
                android:textSize="@dimen/y20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/y5"
                android:text="输入密码"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y12" />

        </RelativeLayout>

        <View style="@style/v_split" />

        <LinearLayout
            style="@style/ll_pwd"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y10">

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_0"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_1"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_2"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_3"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_4"
                    style="@style/iv_pwd" />

            </RelativeLayout>

            <View style="@style/v_pwd" />

            <RelativeLayout style="@style/rl_pwd">

                <ImageView
                    android:id="@+id/iv_pwd_point_5"
                    style="@style/iv_pwd" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pop_input_password_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/y5"
            android:text="忘记密码？"
            android:textColor="@color/blue_2681fc"
            android:textSize="@dimen/y8" />

        <GridView
            android:id="@+id/gv_pop_input_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/gray_c4ced3"
            android:numColumns="3"
            android:paddingBottom="@dimen/y2"
            android:paddingRight="@dimen/y2"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>