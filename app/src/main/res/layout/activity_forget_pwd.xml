<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gjzg.activity.ForgetPwdActivity">
    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_forget_pwd_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="密码重置" />
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/y12"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@color/blue_54affd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证手机"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25">
        <TextView
            android:gravity="center"
            android:background="@drawable/sp_0086"
            android:layout_width="@dimen/y40"
            android:layout_height="match_parent"
            android:text="+86"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/y10"/>
        <EditText
            android:background="@drawable/sp_right_false"
            android:id="@+id/et_forget_pwd_number"
            android:hint="请输入您的手机号"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/sp_et"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25">
        <ImageView
            android:layout_marginTop="@dimen/y5"
            android:scaleType="fitXY"
            android:layout_width="@dimen/y15"
            android:layout_height="@dimen/y15"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:src="@mipmap/write"/>
        <EditText
            android:layout_marginLeft="@dimen/y25"
            android:gravity="center_vertical"
            android:id="@+id/et_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x5"
            android:background="@null"
            android:hint="请输入您收到的验证码"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:singleLine="true"
            android:textColorHint="@color/gray_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y9" />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_forget_pwd"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/x8"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue_54affd"
            android:layout_width="@dimen/y60"
            android:layout_height="match_parent"
            android:text="获取验证码"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_forget_pwd_submit"
        android:gravity="center"
        android:text="下一步"
        android:textSize="@dimen/y10"
        android:textColor="@color/white_ffffff"
        android:background="@drawable/sp_submit"
        android:layout_marginRight="@dimen/y50"
        android:layout_marginLeft="@dimen/y50"
        android:layout_marginTop="@dimen/y15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25" />
</LinearLayout>
