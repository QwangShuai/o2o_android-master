<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:mContext=".activity.RegisteredActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_registered_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="注册" />
        <TextView
            android:layout_marginRight="@dimen/y10"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_login"
            style="@style/tv_top_title"
            android:text="登录"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25">
        <TextView
            android:gravity="center"
            android:background="@drawable/sp_0086"
            android:layout_width="@dimen/y40"
            android:layout_height="match_parent"
            android:text="+86"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/y10"/>
        <EditText
            android:background="@drawable/sp_right_false"
            android:id="@+id/et_registered_phone_number"
            android:hint="请输入您的手机号"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/sp_et"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_height="@dimen/y25">
        <ImageView
            android:layout_marginTop="@dimen/y5"
            android:scaleType="fitXY"
            android:layout_width="@dimen/y15"
            android:layout_height="@dimen/y15"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:src="@mipmap/lock"/>
        <EditText
            android:id="@+id/et_registered_move_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x5"
            android:background="@null"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/gray_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y9" />
        <ImageView
            android:layout_marginTop="@dimen/y9"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_eyes"
            android:layout_width="@dimen/y10"
            android:layout_height="@dimen/y8"
            android:src="@mipmap/close_eyes"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/sp_et"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25">
        <ImageView
            android:layout_marginTop="@dimen/y5"
            android:scaleType="fitXY"
            android:layout_width="@dimen/y15"
            android:layout_height="@dimen/y15"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:src="@mipmap/write"/>
        <EditText
            android:layout_marginLeft="@dimen/y25"
            android:gravity="center_vertical"
            android:id="@+id/et_registered_get_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x5"
            android:background="@null"
            android:hint="请输入您收到的验证码"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:singleLine="true"
            android:textColorHint="@color/gray_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y9" />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_registered_get_code"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/x8"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue_54affd"
            android:layout_width="@dimen/y60"
            android:layout_height="match_parent"
            android:text="获取验证码"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_registered_log"
        android:gravity="center"
        android:text="注册"
        android:textSize="@dimen/y10"
        android:textColor="@color/white_ffffff"
        android:background="@drawable/sp_submit"
        android:layout_marginRight="@dimen/y50"
        android:layout_marginLeft="@dimen/y50"
        android:layout_marginTop="@dimen/y15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25" />
    <TextView
        android:layout_marginTop="@dimen/y15"
        android:textSize="@dimen/y8"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------第三方注册--------"/>
    <ImageView
        android:layout_marginTop="@dimen/y5"
        android:id="@+id/iv_wx_registered"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/y30"
        android:layout_height="@dimen/y30"
        android:src="@mipmap/weixin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明：登录/注册代表您已经同意"
                android:textSize="@dimen/y8" />

            <TextView
                android:id="@+id/tv_login_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《钢建众工用户协议》"
                android:textColor="@color/blue_2681fc"
                android:textSize="@dimen/y8" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
