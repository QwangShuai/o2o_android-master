<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:mContext=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/ll_main_sit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View style="@style/v_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_main_fp"
            style="@style/rl_main">

            <LinearLayout style="@style/ll_main">

                <ImageView
                    android:id="@+id/iv_main_fp"
                    style="@style/iv_main"
                    android:src="@mipmap/fp_choosed" />

                <TextView
                    android:id="@+id/tv_main_fp"
                    style="@style/tv_main"
                    android:text="首页"
                    android:textColor="@color/red_ff3e50" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_mag"
            style="@style/rl_main">

            <LinearLayout style="@style/ll_main">

                <ImageView
                    android:id="@+id/iv_main_mag"
                    style="@style/iv_main"
                    android:src="@mipmap/mag_default" />

                <TextView
                    android:id="@+id/tv_main_mag"
                    style="@style/tv_main"
                    android:text="工作管理"
                    android:textColor="@color/blue_2681fc" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_dc"
            style="@style/rl_main">

            <LinearLayout style="@style/ll_main">

                <ImageView
                    android:id="@+id/iv_main_dc"
                    style="@style/iv_main"
                    android:src="@mipmap/dc_default" />

                <TextView
                    android:id="@+id/tv_main_dc"
                    style="@style/tv_main"
                    android:text="优惠"
                    android:textColor="@color/blue_2681fc" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_me"
            style="@style/rl_main">

            <LinearLayout style="@style/ll_main">

                <ImageView
                    android:id="@+id/iv_main_me"
                    style="@style/iv_main"
                    android:src="@mipmap/me_default" />

                <TextView
                    android:id="@+id/tv_main_me"
                    style="@style/tv_main"
                    android:text="我的"
                    android:textColor="@color/blue_2681fc" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
