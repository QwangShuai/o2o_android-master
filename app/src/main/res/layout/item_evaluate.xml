<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/y5">

        <com.gjzg.custom.CImageView
            android:id="@+id/iv_item_evaluate_icon"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:scaleType="fitXY"
            android:src="@mipmap/person_face_default" />

        <TextView
            android:id="@+id/tv_item_evaluate_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_toRightOf="@+id/iv_item_evaluate_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

        <TextView
            android:id="@+id/tv_item_evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_evaluate_icon"
            android:layout_marginLeft="@dimen/y5"
            android:layout_toRightOf="@+id/iv_item_evaluate_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

    </RelativeLayout>

</LinearLayout>