<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_bind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:mContext=".activity.PhoneBindActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_phone_bind_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="手机绑定" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phone_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:padding="@dimen/y5"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

        <View style="@style/v_split" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_phone_bind_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入动态密码"
                android:inputType="numberPassword"
                android:padding="@dimen/y5"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_phone_bind_get_pwd"
                android:layout_width="@dimen/y80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/y5"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:paddingBottom="@dimen/y3"
                android:paddingLeft="@dimen/y5"
                android:paddingRight="@dimen/y5"
                android:paddingTop="@dimen/y3"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_phone_bind_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/y5"
        android:textSize="@dimen/y10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_phone_bind_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:background="@drawable/sl_me_login"
            android:gravity="center"
            android:padding="@dimen/y5"
            android:paddingBottom="@dimen/y5"
            android:text="确定"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

    </RelativeLayout>

</LinearLayout>
