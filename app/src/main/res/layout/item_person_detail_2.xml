<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:id="@+id/tv_item_person_detail_2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y11" />

        <TextView
            android:id="@+id/tv_item_person_detail_2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y11" />

    </LinearLayout>

    <View style="@style/v_split" />

    <GridView
        android:id="@+id/gv_item_person_detail_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginRight="@dimen/y5"
        android:numColumns="4"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y5"
        android:background="@color/gray_c4ced3" />

</LinearLayout>