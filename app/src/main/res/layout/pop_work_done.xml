<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y5"
        android:text="确认完工后，您将付给工人相应的工资"
        android:textColor="@color/gray_a0a0a0"
        android:textSize="@dimen/y10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"
        android:text="200元/人/天，工期2天，共400元"
        android:textColor="@color/black_252323"
        android:textSize="@dimen/y10"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y5"
        android:text="是否确认已经完工？"
        android:textColor="@color/gray_a0a0a0"
        android:textSize="@dimen/y10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pop_work_done_no"
            android:layout_width="@dimen/y60"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_me_login"
            android:gravity="center"
            android:padding="@dimen/y5"
            android:text="还未完工"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y8" />

        <TextView
            android:id="@+id/tv_pop_work_done_yes"
            android:layout_width="@dimen/y60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y50"
            android:background="@drawable/sl_me_login"
            android:gravity="center"
            android:padding="@dimen/y5"
            android:text="确认完工"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y8" />

    </LinearLayout>

</LinearLayout>