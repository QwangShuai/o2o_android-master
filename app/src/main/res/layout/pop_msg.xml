<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y5">

            <TextView
                android:id="@+id/tv_pop_msg_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_pop_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tv_pop_msg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>